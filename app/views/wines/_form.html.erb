<%= form_with(model: wine) do |form| %>
  <% if wine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

<div class="field">
<% form.label :strains %>
<%= form.collection_check_boxes(:strain_ids,
                                Strain.where(available: true),
                                :id,
                                :name) do |b|%>
  <%= b.label class:"label-checkbox" do %>
      <%= b.check_box + b.text %>
      <% end %>
    <% end %>

</div>

  <div>
    <%= form.label :score, style: "display: block" %>
    <%= form.number_field :score %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
